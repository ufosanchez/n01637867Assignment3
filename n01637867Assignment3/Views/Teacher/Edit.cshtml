@model n01637867Assignment3.Models.Teacher

@{
    ViewBag.Title = "Edit";
}

<h2>Editing a specific Teacher</h2>

<a class="goBack" href="/Teacher/Show/@Model.TeacherID">Back to Show Teacher</a>

<!-- Form that will display the information of the Teacher and it will allow the user to update the inputs, this form will redirect
    the user to /Teacher/Show/{id}, this will update the cells of the Teacher in the DB -->
<form method="POST" action="/Teacher/Update/@Model.TeacherID" name="form_update">
    <span id="errorMsg"></span>
    <div>
        <label for="TeacherFName">First Name:</label>
        <input type="text" id="TeacherFName" name="TeacherFName" value="@Model.TeacherFName"/>
    </div>

    <div>
        <label for="TeacherLName">Last Name:</label>
        <input type="text" id="TeacherLName" name="TeacherLName" value="@Model.TeacherLName"/>
    </div>

    <div>
        <label for="EmployeeNumber">Employee Number:</label>
        <input type="text" id="EmployeeNumber" name="EmployeeNumber" value="@Model.EmployeeNumber"/>
    </div>

    <div>
        <label for="Salary">Salary:</label>
        <input type="number" id="Salary" name="Salary" step="0.01" value="@Model.Salary"/>
    </div>

    <div>
        <input type="submit" value="Update Teacher">
    </div>
</form>

<script>
    /*update validation Client Side Validation*/

    window.onload = function () {

        var formHandle = document.forms.form_update;

        var error = document.getElementById("errorMsg");

        formHandle.onsubmit = processForm;

        function processForm() {

            var TeacherFName = formHandle.TeacherFName;
            var fNameValue = TeacherFName.value;

            var TeacherLName = formHandle.TeacherLName;
            var lNameValue = TeacherLName.value;

            var EmployeeNumber = formHandle.EmployeeNumber;
            var employeeNum = EmployeeNumber.value;

            var Salary = formHandle.Salary;
            var salaryValue = Salary.value;

            if (fNameValue === "" || fNameValue === null) {
                error.innerHTML = "ERROR - Please provide the First Name of the Updated Teacher";
                TeacherFName.style.background = "red";
                TeacherLName.style.background = "white";
                EmployeeNumber.style.background = "white";
                Salary.style.background = "white";
                TeacherFName.focus();
                return false
            }
            else if (lNameValue === "" || lNameValue === null) {
                error.innerHTML = "ERROR - Please provide the Last Name of the Updated Teacher";
                TeacherFName.style.background = "white";
                TeacherLName.style.background = "red";
                EmployeeNumber.style.background = "white";
                Salary.style.background = "white";
                TeacherLName.focus();
                return false
            }
            else if (employeeNum === "" || employeeNum === null) {
                error.innerHTML = "ERROR - Please provide the Employee Number of the Updated Teacher";
                TeacherFName.style.background = "white";
                TeacherLName.style.background = "white";
                EmployeeNumber.style.background = "red";
                Salary.style.background = "white";
                EmployeeNumber.focus();
                return false
            }
            else if (salaryValue === "" || salaryValue === null) {
                error.innerHTML = "ERROR - Please provide the Salary of the Updated Teacher";
                TeacherFName.style.background = "white";
                TeacherLName.style.background = "white";
                EmployeeNumber.style.background = "white";
                Salary.style.background = "red";
                Salary.focus();
                return false
            }
            else {
                error.innerHTML = "";
                TeacherFName.style.background = "white";
                TeacherLName.style.background = "white";
                EmployeeNumber.style.background = "white";
                Salary.style.background = "white";
            }
        }

    }

</script>